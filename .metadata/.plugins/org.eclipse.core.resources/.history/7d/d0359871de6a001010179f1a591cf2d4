package com.project.feastify.controller;

import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.project.feastify.service.CartService;



@RestController
@RequestMapping("/cart")
public class CartController 
{
	@Autowired
	private CartService cartService;
	
	@PostMapping()
	public ResponseEntity<?> addToCart(@RequestBody Map<Long, String> request) {
	    Long foodIdObj = request.get(foodId);

	    if (foodIdObj == null || foodIdObj.isEmpty()) {
	        return ResponseEntity.badRequest().body("Food Id is Required");
	    }

	    Long foodId;
	    try {
	        foodId = Long.parseLong(foodIdObj.toString());
	    } catch (NumberFormatException e) {
	        return ResponseEntity.badRequest().body("Invalid Food Id");
	    }

	    cartService.addToCart(foodId);
	    return ResponseEntity.ok("Added to cart");
	}

}
